<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_hook_OnClick"
            style="@style/KButton"
            android:background="#E91E63"
            android:text="Hook OnClick"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_dex_path_list"
            style="@style/KButton"
            android:background="#E91E63"
            android:text="Dex pathList"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_load_dex"
            style="@style/KButton"
            android:background="#FF9966"
            android:text="加载本地jar包中的dex文件"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_hook_instrumentation"
            style="@style/KButton"
            android:background="#FF9966"
            android:text="Hook Instrumentation(拦截Activity启动)"
            android:textAllCaps="false"
            />



    </LinearLayout>

</ScrollView>
